<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">


    <!-- datatable js -->
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>

    <!-- datatable css -->
    <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.2.0/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css" />
</head>

<body>
    <script>
        $(document).ready(function () {
            $('#example').DataTable();
        });
    </script>
    <div class="container">
        <!-- form Start -->
        <div class="card mt-5 w-75 mx-auto">
            <div class="card-header">
                Word ekle
            </div>
            <div class="card-body">
                <form method="POST" action="/editWord">
                    <div class="mb-3">
                        <label for="exampleInputWord" class="form-label">Word</label>
                        <input type="text" class="form-control" id="exampleInputWord" name="exampleInputWord"
                            aria-describedby="wordHelp" required>
                        <div id="wordHelp" class="form-text">Please enter an English word</div>
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputTrWord" class="form-label">TrWord</label>
                        <input type="text" class="form-control" id="exampleInputTrWord" name="exampleInputTrWord"
                            aria-describedby="TrWordHelp" required>
                        <div id="TrWordHelp" class="form-text">You can write a few words using the - sign between them.</div>
                    </div>
                    <button type="submit" class="btn btn-primary">Ekle</button>
                </form>
            </div>
        </div>
        <!-- from End -->
        <br />
        <!-- table start -->
        <div class="my-5">
            <table class="table table-striped" style="width:100%" id="example">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Word</th>
                        <th scope="col">Rating</th>
                        <th scope="col">Edit</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(var i=0; i<data.length; i++) { %>
                        <tr>
                            <th scope="row">
                                <%= i+1 %>
                            </th>
                            <td>
                                <%= data[i].word %>
                            </td>
                            <td>
                                <%= data[i].rating %>
                            </td>
                            <td><button data-id="<%=  data[i]._id %>" type="button" class="btn btn-danger" onclick="deleteWord(this)">Sil</button></td>
                        </tr>
                        <% } %>
                </tbody>
            </table>
        </div>
        <!-- table end -->
        <script>
            async function deleteWord(element){
                const id = element.getAttribute("data-id");
                const response = await fetch(`http://localhost:3000/editWord/?id=${id}`,{method:"delete"});
                element.parentElement.parentElement.remove();
                //location.reload();
            }
        </script>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
        crossorigin="anonymous"></script>
</body>

</html>